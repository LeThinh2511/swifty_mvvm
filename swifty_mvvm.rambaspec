# Template information section
name: "swifty_mvvm"
summary: "MVVM module template with UIViewController playing as a View"
author: "ThinhLe"
version: "0.1.0"
license: "MIT"

# The declarations for code files
code_files:
# View layer
- {name: ViewController.swift, path: Code/viewcontroller.swift.liquid}

# ViewModel layer
- {name: ViewModel.swift, path: Code/viewmodel.swift.liquid}

# Contracts
- {name: Contracts.swift, path: Code/contracts.swift.liquid}

# Navigator
- {name: Navigator.swift, path: Code/navigator.swift.liquid}

# Initializer
- {name: Initializer.swift, path: Code/initializer.swift.liquid}

# The declarations for test files
test_files:
# ViewController tests
- {name: ViewControllerTests.swift, path: Tests/view_tests.swift.liquid}

# ViewModel tests
- {name: ViewModelTests.swift, path: Tests/viewmodel_tests.swift.liquid}
